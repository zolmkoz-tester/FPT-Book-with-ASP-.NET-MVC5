@model WebBookStore.Models.Sach

@{
    ViewBag.Title = "BOOK DETAILS";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h3>BOOK DETAILS</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Title:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenSach)
        </dd>

        <dt>
            Price:
        </dt>
        <dd>
            @String.Format("{0,0}", Model.GiaBan) $
        </dd>

        <dt>
            Discription:
        </dt>
        <dd style=" width:600px; text-align:justify">
            @Html.DisplayFor(Model => Model.MoTa)
        </dd>

        <dt>
            Img:
        </dt>
        <dd>
            <img src="@Url.Content("/product_imgs/"+ Model.AnhBia)" width="200px" />
        </dd>

        <dt>
            Update:
        </dt>
        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat) 
        </dd>

        <dt>
            Quantity:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuongTon)
        </dd>

        <dt>
            Topic:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ChuDe.TenChuDe)
        </dd>

        <dt>
            Publishing:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NhaXuatBan.TenNXB)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Suasach", new { id = Model.MaSach }) |
    @Html.ActionLink("Return", "Sach")
</p>